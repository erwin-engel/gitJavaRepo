<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
    	<display-name>
    	ControllerServlet</display-name>
    	<servlet-name>ControllerServlet</servlet-name>
    	<servlet-class>servlets.ControllerServlet</servlet-class>
    </servlet>
    <servlet>
    	<display-name>
    	EnqueteDefinierenServlet</display-name>
    	<servlet-name>EnqueteDefinierenServlet</servlet-name>
    <servlet-class>servlets.EnqueteDefinierenServlet</servlet-class>
    </servlet>
    <servlet>
    	<display-name>EnqueteVerzendenServlet</display-name>
    	<servlet-name>EnqueteVerzendenServlet</servlet-name>
    <servlet-class>servlets.EnqueteVerzendenServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>ControllerServlet</servlet-name>
    	<url-pattern>/ControllerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>EnqueteDefinierenServlet</servlet-name>
    	<url-pattern>/EnqueteDefinierenServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>EnqueteVerzendenServlet</servlet-name>
    	<url-pattern>/EnqueteVerzendenServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ToonNieuweEnquete.jsp</welcome-file>
    </welcome-file-list>
</web-app>

